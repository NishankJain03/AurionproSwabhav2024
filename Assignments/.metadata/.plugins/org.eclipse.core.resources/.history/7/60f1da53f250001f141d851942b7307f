package com.aurionpro.model;

public class TicTacToeGame {
    private char[][] board;
    private boolean player1Turn;

    public TicTacToeGame() {
        board = new char[3][3];
        for (int i = 0; i < 3; i++) {
            fillColumn(board, i);
        }
        player1Turn = true;
    }

    public boolean makeMove(int row, int col) {
        if (row < 0 || col < 0 || row >= 3 || col >= 3 || board[row][col] != '-') {
            return false;
        }
        board[row][col] = player1Turn ? 'x' : 'o';
        player1Turn = !player1Turn;
        return true;
    }

    public char checkWinner() {
        // Check rows, columns, and diagonals for a winner
        char winner = playerHasWon();
        if (winner != ' ') {
            return winner;
        }
        return boardIsFull() ? 'T' : ' ';
    }

    private char playerHasWon() {
        // Check rows
        for (int i = 0; i < 3; i++) 
            checkRow(board, i);
        // Check columns
        for (int i = 0; i < 3; i++) 
            checkCol(board, i);
        // Check diag(
        leftToRightDiagonal(board);
        rightToLeftDiagonal(board);
        return ' ';
    }

    private boolean boardIsFull() {
        for (int i = 0; i < 3; i++) {
        	
        }
        return true;
    }

    public char[][] getBoard() {
        return board;
    }
    
    public boolean isPlayer1Turn() {
        return player1Turn;
    }
    public void fillColumn(char [][] board, int i) {
    	for (int j = 0; j < 3; j++) {
            board[i][j] = '-';
        }
    }
    public char checkRow(char [][] board, int i) {
    	if (board[i][0] != '-' && board[i][0] == board[i][1] && board[i][1] == board[i][2]) {
            return board[i][0];
        }
		return ' ';
    }
    public char checkCol(char [][] board, int i) {
    	if (board[0][i] != '-' && board[0][i] == board[1][i] && board[1][i] == board[2][i]) {
            return board[0][i];
        }
    	return ' ';
    }
    
    public char leftToRightDiagonal(char [][] board) {
    	if (board[0][0] != '-' && board[0][0] == board[1][1] && board[1][1] == board[2][2]) {
            return board[0][0];
        }
    	return ' ';
    }
    public char rightToLeftDiagonal(char [][] board) {
    	if (board[0][2] != '-' && board[0][2] == board[1][1] && board[1][1] == board[2][0]) {
            return board[0][2];
        }
    	return  ' ';
    }
    public void traverseBoardCol(char [][] board) {
    	for (int j = 0; j < 3; j++) {
    		checkIsFull(board);
        }
    }
    public boolean checkIsFull(char [][] board, int i,int j) {
    	if (board[i][j] == '-') {
            return false;
        }
    	return true;
    }
}
