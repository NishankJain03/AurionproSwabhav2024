package com.aurionpro.test;

import java.io.File;
import java.io.IOException;
import java.nio.file.Files;
import java.util.List;
import java.util.stream.Stream;

public class FileReaderStreamDemo {

	public static void main(String[] args) {
		String fileName = "D:\\Training\\Assignments\\FileReadAssignmnetUsingStream\\src\\test";
		
		File file = new File(fileName);
		
		List<String> linesStream;
		try {
			linesStream = Files.readAllLines(file.toPath());
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
			linesStream.forEach((line) -> System.out.println(line));
		

	}

}
